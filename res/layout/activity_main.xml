<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity" >

    <EditText
        android:id="@+id/editZipCode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLength="5"
        android:hint="Zip Code"
        android:inputType="number" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/textCity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Selected City" 
        android:textAppearance="?android:attr/textAppearanceLarge"/>

    <ImageView
        android:id="@+id/imageCurrent"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:id="@+id/textCurrent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Current Forecast" 
        android:gravity="center_horizontal"
        android:textAppearance="?android:attr/textAppearanceMedium"/>
    
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="" 
        android:gravity="center_horizontal"
        android:textAppearance="?android:attr/textAppearanceMedium"/>
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">
        
	    <TextView
	        android:id="@+id/textDay1"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:gravity="center_horizontal"
	        android:text="Day 1 Forecast" />
    
	    <TextView
	        android:id="@+id/textHigh1"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:gravity="center_horizontal"
	        android:text="High Temp" />
	    
	    <TextView
	        android:id="@+id/textLow1"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:gravity="center_horizontal"
	        android:text="Low Temp" />
	    
	    <ImageView
	        android:id="@+id/imageDay1"
	        android:layout_width="75dp"
	        android:layout_height="75dp"
	        android:layout_gravity="center_horizontal"/>
	    
	    <TextView
	        android:id="@+id/textText1"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:gravity="center_horizontal"
	        android:text="Something" />
	    
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">
        
	    <TextView
	        android:id="@+id/textDay2"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:gravity="center_horizontal"
	        android:text="Day 1 Forecast" />
    
	    <TextView
	        android:id="@+id/textHigh2"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:gravity="center_horizontal"
	        android:text="High Temp" />
	    
	    <TextView
	        android:id="@+id/textLow2"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:gravity="center_horizontal"
	        android:text="Low Temp" />
	    
	    <ImageView
	        android:id="@+id/imageDay2"
	        android:layout_width="75dp"
	        android:layout_height="75dp"
	        android:layout_gravity="center_horizontal"/>
	    
	    <TextView
	        android:id="@+id/textText2"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:gravity="center_horizontal"
	        android:text="Something" />
	    
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">
        
	    <TextView
	        android:id="@+id/textDay3"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:gravity="center_horizontal"
	        android:text="Day 1 Forecast" />
    
	    <TextView
	        android:id="@+id/textHigh3"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:gravity="center_horizontal"
	        android:text="High Temp" />
	    
	    <TextView
	        android:id="@+id/textLow3"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:gravity="center_horizontal"
	        android:text="Low Temp" />
	    
	    <ImageView
	        android:id="@+id/imageDay3"
	        android:layout_width="75dp"
	        android:layout_height="75dp"
	        android:layout_gravity="center_horizontal"/>
	    
	    <TextView
	        android:id="@+id/textText3"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:gravity="center_horizontal"
	        android:text="Something" />
	    
    </LinearLayout>    
    
    </LinearLayout>
</LinearLayout>
